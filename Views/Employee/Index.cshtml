@model IEnumerable<EmployeeIndexViewModel>
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
  <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-left">
                      <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">الصفحة الرئيسية</a></li>
                    <li class="breadcrumb-item">لائحة الموظفين</li>
                   
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h3>لائحة الموظفين</h3>
                    <hr />
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
     

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12 ">
                <a asp-action="Create" class="btn btn-primary float-left ml-4">
                    <i class="fa fa-plus-circle ml-1"></i>
                  إضافة جديد
                </a>
            </div>
        </div>
        <p>
            @*<a asp-action="Create">
                <i class="fa fa-plus-circle"></i>
                إضافة
            </a>
            &nbsp;&nbsp;*@
            <a data-toggle="collapse" href="#searchPanel" aria-expanded="false" aria-controls="searchPanel">
                <i class="fa fa-search"></i>
                بحث
            </a>
        </p>

        <div class="collapse" id="searchPanel">
            
            <div class="card">
                <div class="card-header">
                    يرجى إدخال حقول البحث
                </div>
                <div class="card-body">
                    <form method="post" asp-action="searchEmployees">
                        <div class="row form-group">
                            <div class="col-sm-2">
                                <label class="col-form-label">إسم الموظف</label>
                            </div>
                            <div class="col-sm-4">
                                <input class="form-control-sm form-control" />
                            </div>
                            <div class="col-sm-2">
                                <label class="col-form-label">الرقم المالي</label>
                            </div>
                            <div class="col-sm-4">
                                <input class="form-control-sm form-control" />
                            </div>
                        </div>
                     <div class="row form-group">
                            <div class="col-sm-2">
                                <label class="col-form-label">رقم القرار</label>
                            </div>
                            <div class="col-sm-4">
                                <input class="form-control-sm form-control" />
                            </div>
                            <div class="col-sm-2">
                                <label class="col-form-label">تاريخ التعيين</label>
                            </div>
                            <div class="col-sm-4">
                                <input type="date" class="form-control-sm form-control" />
                            </div>
                        </div>
                        
                    </form>
                </div>
                
            </div>
        </div>
        <br/>

                        <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        @*<a class="btn btn-xs btn-outline-success float-md-right" asp-controller="Employee" asp-action="Create">New Employee</a>*@
                        <table class="table table-striped table-responsive table-light table-hover" style="display: table;">
                            <thead style="background-color: rgb(2 70 60); color: white; font-weight: bolder;">
                                <tr>
                                    <th>الرقم التسلسلي</th>
                                     <th>الصورة</th>
                                    <th>إسم الموظف</th>
                                    <th>الرقم المالي</th>
                               
                                    <th> تاريخ الولادة </th>
                                   <th></th>
                                </tr>
                            </thead>
                            <tbody style="color: #3a4848 ">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><a asp-action="Detail" asp-route-id="@item.PkemployeeId">@item.PkemployeeId</a></td>
                                         <td><img class="img-fluid" alt="image" src="@("~/images/employee/"+ item.EmployeeImageName )" asp-append-version="true" style="width: 5rem;height: 5rem;border-radius: 50% !important;" /></td>
                                        <td>@(item.EmployeeFirstName +" "  + item.EmployeeLastName)</td>
                                        <td>@item.EmployeeFinancialNumber</td>
                                        <td>@item.EmployeeDateOfBirth.ToShortDateString()</td>
                                       
                                       

                                    <td>
                                        <a class="text-primary" asp-action="Edit" asp-route-EmployeeId="@item.PkemployeeId">Edit<i class="fa-solid fa-square-info"></i></a>
                                        <a class="text-primary" asp-action="Detail" asp-route-EmployeeId="@item.PkemployeeId">Details<i class="fa-solid fa-square-info"></i></a>
                                        <a class="text-primary" asp-action="Delete" asp-route-EmployeeId="@item.PkemployeeId">Delete<i class="fa-solid fa-circle-trash"></i></a>
                                    </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
    </section>
</div>







